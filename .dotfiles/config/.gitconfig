[core]
	editor = code --wait
	excludesfile = ~/.dotfiles/config/.gitignore.local
	filemode = false
	eol = lf
	autocrlf = input
[init]
	defaultBranch = main
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autoStash = true
[gpg]
	format = ssh
[gpg "ssh"]
	defaultKeyCommand = ssh-gpg
	allowedSignersFile = ~/.ssh/allowed_signers
[commit]
	gpgsign = true
